<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E2E2E2</item>
        <item name="colorPrimaryDark">#E2E2E2</item>
        <item name="colorAccent">#412647</item>
    </style>

    <!--Progress Dialogue-->
    <style name="Custom" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">Please Wait</item>
        <item name="DialogSpotColor">@android:color/holo_orange_dark</item>
        <item name="DialogSpotCount">8</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="colorAccent">@color/color1</item>
        <item name="colorControlNormal">@color/color1</item>
        <item name="colorControlActivated">@color/color1</item>

    </style>

    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#868686</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

</resources>
