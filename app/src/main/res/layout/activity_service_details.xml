<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/inner_grad"
    tools:context=".Activity.ServiceDetails">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_above="@+id/submitbtn"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/cuatmosername"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                       />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_gravity="center">


                <ImageView
                    android:tint="@color/neww"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/job"/>

                <LinearLayout

                    android:orientation="horizontal"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Job No :"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:id="@+id/jobNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"


                        />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="10dp"
                android:layout_gravity="center">


                  <ImageView
                      android:tint="@color/neww"
                      android:layout_width="25dp"
                      android:layout_height="25dp"
                      android:src="@drawable/detail_icon"/>

                    <LinearLayout

                        android:orientation="vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/black"
                            android:textSize="15dp"

                            />


                    </LinearLayout>


                </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="10dp"
                android:layout_gravity="center">


                <ImageView
                    android:tint="@color/neww"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/phone"/>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile No"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/cust_mob"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"


                        />


                </LinearLayout>


            </LinearLayout>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="10dp"
                android:layout_gravity="center">


                <ImageView
                    android:tint="@color/neww"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/location"/>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Locaion"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:id="@+id/location_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"

                        />


                </LinearLayout>


            </LinearLayout>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:padding="10dp"
                android:layout_gravity="center">


                <ImageView
                    android:tint="@color/neww"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/clock"/>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shedule"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        />
                    <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/shedule_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"


                    />
                    <!--<TextView-->
                        <!--android:layout_marginTop="10dp"-->
                        <!--android:id="@+id/shedule_time"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:textColor="@android:color/black"-->
                        <!--android:textSize="15dp"-->
                        <!--android:text="10.30 AM"-->

                        <!--/>-->


                </LinearLayout>


            </LinearLayout>

            <Chronometer
                android:layout_gravity="center"
                android:id="@+id/chronometer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chronometer" />




        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    <Button
        android:layout_alignParentBottom="true"
        android:background="@drawable/logbtn"
        android:textColor="@android:color/white"
        android:layout_margin="10dp"
        android:layout_marginBottom="25dp"
        android:layout_gravity="center"
        android:id="@+id/submitbtn"
        android:layout_width="match_parent"
        android:layout_height="45dp" />



</RelativeLayout>