<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#AA000000"
    android:id="@+id/parentlay"
    tools:context=".Dialogue.Vehicle_km">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5dp"
        android:layout_gravity="center"
        app:cardBackgroundColor="#492b51"
        android:layout_margin="15dp"
        app:cardCornerRadius="5dp">

    <LinearLayout
        android:background="#492b51"
       android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:background="@drawable/spinnerbg"
            android:layout_height="wrap_content">
    <Spinner

        android:id="@+id/vehicleNo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        >

    </Spinner>

        </RelativeLayout>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textColor="@android:color/white"
        android:text="Please enter your Vehicle Kilometer" />

    <EditText
        android:padding="10dp"
        android:background="@android:color/white"
        android:id="@+id/inKm"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:hint="kilometer"
        android:inputType="number" />

        <LinearLayout

            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:background="@drawable/logbtn"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:id="@+id/submitbtn"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:text="Done" />

            <Button
                android:background="@drawable/logbtn"
                android:textColor="@android:color/white"
                android:layout_gravity="center"
                android:id="@+id/cncelbutton"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:text="Cancel" />

        </LinearLayout>
    </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>