<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.PaymentReport">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_above="@+id/submit"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            /////////Charged Amount

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_gravity="center">


                <ImageView
                    android:tint="@color/color1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/rupees"/>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Charged Amount"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        />
                    <EditText
                        android:padding="8dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/chargedamount"
                        android:background="@drawable/spinnerbg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:hint="Enter Here"

                        />


                </LinearLayout>


            </LinearLayout>


            ///Collected Amount

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_gravity="center">


                <ImageView
                    android:tint="@color/color1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/rupees"/>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Collected Amount"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        />
                    <EditText
                        android:padding="8dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/collectedamount"
                        android:background="@drawable/spinnerbg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:hint="Enter Here"
                        />

                </LinearLayout>

            </LinearLayout>


            //Balance Amount

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_gravity="center">


                <ImageView
                    android:tint="@color/color1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/rupees"/>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Balance Amount"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        />
                    <EditText
                        android:padding="8dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/balanceamount"
                        android:background="@drawable/spinnerbg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:hint="Enter Here"
                        />

                </LinearLayout>

            </LinearLayout>


            //Service Report No

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_gravity="center">


                <ImageView
                    android:tint="@color/color1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/detail_icon"/>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Service Report No"
                        android:textColor="@android:color/black"
                        android:textSize="18dp"
                        />
                    <EditText
                        android:padding="8dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/servicereport"
                        android:background="@drawable/spinnerbg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:textSize="15dp"
                        android:hint="Enter Here"

                        />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </android.support.v4.widget.NestedScrollView>

    //Submit Button

    <LinearLayout
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/logbtn"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="SUBMIT"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

    </LinearLayout>

</RelativeLayout>